<div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseModal" style="display: @(ShowModal ? "block" : "none")">
    <div class="bg-white rounded-lg p-6 shadow-lg w-1/3" @onclick:stopPropagation="true">
        <h3 class="text-lg font-semibold">New Song Added</h3>
        <ul class="mt-4">
            @foreach (var notification in Notifications)
            {
                <li class="text-gray-700">@notification</li>
            }
        </ul>

        <!-- Close button -->
        <div class="mt-4 flex justify-end">
            <button class="bg-red-500 text-white px-4 py-2 rounded" @onclick="CloseModal">Close</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool ShowModal { get; set; }

    [Parameter]
    public EventCallback<bool> ShowModalChanged { get; set; }

    [Parameter]
    public List<string> Notifications { get; set; } = new();

    private void CloseModal()
    {
        ShowModal = false;
        ShowModalChanged.InvokeAsync(ShowModal);  // Notify parent to update modal state
    }
}